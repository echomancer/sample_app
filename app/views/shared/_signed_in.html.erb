  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
        <% if !current_page?(root_path) %>
          <h3>Microposts Tags</h3>
          <div id="tag_cloud">
            <% tag_cloud Micropost.tag_counts, %w{s m l} do |tag, css_class| %>
            <%= link_to tag.name, tag_path(tag.name), class: css_class %>
            <% end %>
          </div>
        <% end %>
        <h3>Micropost Feed</h3>
        <%= render 'shared/feed' %>
    </div>
  </div>  